{
  "extends": "airbnb",
  "rules": {
    "linebreak-style": 0,
    "indent": ["error", 2],
    "max-len": ["error", { "code": 200 }],
    "import/no-extraneous-dependencies": false,
  },
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@controllers", "./src/controllers"],
          ["@utilities", "./src/utilities"],
          ["@models", "./src/models"],
          ["@config", "./src/config"],
          ["@services", "./src/services"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  },
  "env": {
    "jest": true
  }
}